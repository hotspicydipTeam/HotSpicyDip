<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fl_game_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gameview"
    tools:context="com.scnu.hotspicydip.activity.GameViewActivity">

    <com.scnu.hotspicydip.view.palletView
        android:id="@+id/myPalletView"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <com.scnu.hotspicydip.view.RoundProgressBar
        android:id="@+id/round_time"
        app:roundColor="#f1f1f1"
        app:roundProgressColor="#ff0000"
        app:roundWidth="10dp"
        android:layout_width="150dp"
        app:textSize="35sp"
        app:textColor="#ff0000"
        app:textIsDisplayable="false"
        android:layout_height="150dp" />

    <RelativeLayout
        android:id="@+id/rl_control"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="right|bottom">
    <FrameLayout
        android:id="@+id/fl_charge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/power"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:id="@+id/rl_shield"
            android:layout_width="40dp"
            android:layout_height="375dp"
            android:layout_marginTop="15dp"
            android:background="@mipmap/pipe"
            android:layout_gravity="center_horizontal|top"></RelativeLayout>
    </FrameLayout>
    <!--<FrameLayout
        android:layout_width="50dp"
        android:layout_height="5dp"
        android:padding="2dp"
        android:id="@+id/fl_charge"
        android:layout_above="@+id/iv_skewer"
        android:layout_alignParentRight="true"
        android:background="#FF8C00">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/charge" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:id="@+id/rl_shield"
            android:background="#FF8C00"></RelativeLayout>
    </FrameLayout>-->
    <ImageView
        android:id="@+id/iv_skewer"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_width="20dp"
        android:layout_height="50dp"
        android:background="@mipmap/skewer"/>
    </RelativeLayout>
</FrameLayout>
